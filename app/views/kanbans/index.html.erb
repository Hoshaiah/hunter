<div class="col-lg-7 col-md-8 col-sm-9 mx-auto">
  <table class="table table-hover caption-top">
    <caption>My Boards:</caption>

    <thead class="table-primary">
      <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Edit</th>
        <th class="text-center" >Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @kanbans.each do |kanban| %>
        <tr>
          <td class="text-center"><%= link_to kanban.name, kanban, class: "fw-bold"%></td>
          <td class="text-center"><%= link_to '', edit_kanban_path(kanban), class: "bi bi-pencil-square" %></td>
          <td class="text-center"><%= link_to '', kanban, method: :delete, data: { confirm: 'Are you sure?' }, class: "bi bi-trash-fill" %></td>
        </tr>
      <% end %>
        <tr>
          <td colspan="3" class="text-center"><%= link_to '+ new board', new_kanban_path, class: "fw-bold" %></td>
        </tr>
    </tbody>
  </table>
</div>
