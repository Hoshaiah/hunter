<%= simple_form_for [@kanban, @kanban_column, @card, @activity] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.select :tag, options_for_select(@activity_tags, @activity ? @activity.tag : @activity_tags.first), {}, {class: "form-select mb-2"}%>
    <%= f.input :completed%>
    <%= f.input :note%>
    <%= f.input :startdate%>
    <%= f.input :enddate%>
  </div>

  <div class="form-actions d-flex mb-2">
    <%= f.button :submit, class: "btn btn-primary flex-fill" %>
  </div>
<% end %>