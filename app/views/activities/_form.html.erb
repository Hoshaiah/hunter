<%= simple_form_for [@kanban, @kanban_column, @card, @activity] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.select :tag, options_for_select(@activity_tags)%>
    <%= f.input :completed%>
    <%= f.input :note%>
    <%= f.input :startdate%>
    <%= f.input :enddate%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>