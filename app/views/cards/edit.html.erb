<h1>Editing Card</h1>
<%= link_to "Activities", kanban_kanban_column_card_activities_path(@kanban.id, @kanban_column.id, @card.id) %>
<%= render 'form', card: @card %>

<hr>
<div>
    <p>Applied</p>
    <% @activities[:apply].each do |activity| %>
        <%= form_with url: kanban_kanban_column_card_activity_path(@kanban.id, @kanban_column.id, @card.id, activity.id), method: :put do |f| %>
            <%= check_box("activity", :completed, options = {checked: activity.completed, onchange: "this.form.submit()", id: "activity_#{activity.id}", class:""}) %>
            <%= link_to edit_kanban_kanban_column_card_activity_path(@kanban.id, @kanban_column.id, @card.id, activity.id) do %>
                <label><%=activity.title %> </label>
            <%end%>
        <% end %>
    <% end %>
    <%= link_to "+ Log Application", new_kanban_kanban_column_card_activity_url(@kanban.id, @kanban_column.id, @card.id, :type => "Apply") %>
</div>
